<FinalLayout>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.3

            Label:
                text: root.calendario
                font_size: 15
                halign: "left"
                valign: "middle"
                text_size: self.size

            Label:
                id: relogio
                text: ""
                font_size: 25
                halign: "right"
                valign: "middle"
                text_size: self.size

        Label:
            text: root.notificacao
            color: 1,0,0,1
            size_hint_y: 0.1

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.2
            spacing: 5
            padding: 5

            TextInput:
                id: texto_tarefa
                hint_text: "Nova tarefa"

            Spinner:
                id: prioridade
                text: "Normal"
                values: ["Baixa", "Normal", "Alta"]

            TextInput:
                id: prazo
                hint_text: "AAAA-MM-DD"

            Button:
                text: "Adicionar"
                on_release:
                    root.adicionar_tarefa(texto_tarefa.text, prioridade.text, prazo.text)
                    texto_tarefa.text = ""
                    prazo.text = ""

        ListView:
            id: lista_tarefas
            size_hint_y: 0.4

        Button:
            text: "Remover selecionada"
            size_hint_y: 0.1
            on_release:
                root.remover_tarefa(lista_tarefas.adapter.selection[0].index if lista_tarefas.adapter.selection else -1)
